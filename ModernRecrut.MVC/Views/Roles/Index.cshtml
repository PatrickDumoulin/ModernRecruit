@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Liste des rôles";
}

<div class="container mt-5">
    <h1 class="mb-4">Liste des rôles</h1>

    @* Actions disponibles pour les administrateurs *@
    @if (User.IsInRole("Admin"))
    {
        <div class="mb-4">
            <a asp-action="Create" class="btn btn-primary mx-1">Ajouter un rôle</a>
            <a asp-action="Assigner" class="btn btn-secondary mx-1">Assigner un rôle</a>
        </div>
    }

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nom du rôle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Modifier</a>
                        @* <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Supprimer</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
