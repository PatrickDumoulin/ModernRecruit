@model ModernRecrut.MVC.DTO.RequetePostulation

@{
    ViewData["Title"] = "Postuler";

    @* Style des messages d'erreurs *@
    <style>
        .Errors {
            color: red;
            font-size: 1.2em;
            margin-bottom: 10px;
        }
    </style>
}

<div class="container mt-5">
    <h1 class="mb-4">Postuler à l'offre d'emploi</h1>
    <hr />

    @* Affichage des messages d'erreurs *@
    <div class="Errors">
        @Html.ValidationMessage("Error")
        @Html.ValidationMessage("all")
    </div>

   
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Postuler">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- IdCandidat caché -->
                <input asp-for="IdCandidat" class="form-control" type="hidden" />
                <span asp-validation-for="IdCandidat" class="text-danger"></span>

                <!-- OffreDEmploiId caché -->
                <input asp-for="OffreDEmploiId" class="form-control" type="hidden" />
                <span asp-validation-for="OffreDEmploiId" class="text-danger"></span>

                <!-- Prétention salariale -->
                <div class="form-group mb-3">
                    <label asp-for="PretentionSalariale" class="control-label">Prétention salariale</label>
                    <input asp-for="PretentionSalariale" class="form-control" value="0" />
                    <span asp-validation-for="PretentionSalariale" class="text-danger"></span>
                </div>

                <!-- Date de disponibilité -->
                <div class="form-group mb-3">
                    <label asp-for="DateDisponibilite" class="control-label">Date de disponibilité</label>
                    <input asp-for="DateDisponibilite" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DateDisponibilite" class="text-danger"></span>
                </div>

                <!-- Bouton de soumission -->
                <div class="form-group">
                    <input type="submit" value="Postuler" class="btn btn-primary w-100" />
                </div>
            </form>
        </div>
    </div>

    <!-- Lien de retour -->
    <div class="mt-4">
        <a asp-controller="OffresEmplois" asp-action="Index" class="btn btn-secondary">Retour à la liste des offres d'emplois</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
