@model IEnumerable<ModernRecrut.MVC.Models.Postulation>

@{
    ViewData["Title"] = "Liste des Postulations";
}

<div class="container mt-5">
    <h1 class="mb-4">Liste des Postulations</h1>

    <!-- Tableau des postulations -->
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.IdCandidat)</th>
                <th>@Html.DisplayNameFor(model => model.OffreDEmploiId)</th>
                <th>@Html.DisplayNameFor(model => model.PretentionSalariale)</th>
                <th>@Html.DisplayNameFor(model => model.DateDisponibilite)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdCandidat)</td>
                    <td>@Html.DisplayFor(modelItem => item.OffreDEmploiId)</td>
                    <td>@Html.DisplayFor(modelItem => item.PretentionSalariale)</td>
                    <td>@Html.DisplayFor(modelItem => item.DateDisponibilite)</td>
                    <td>
                        @* <a asp-action="Noter" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">Noter</a> *@
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Modifier</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Détails</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
