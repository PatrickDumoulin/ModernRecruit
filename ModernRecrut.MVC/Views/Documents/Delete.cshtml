@model ModernRecrut.MVC.Models.DocumentModel

@{
    ViewData["Title"] = "Supprimer un document";
}

<div class="container mt-5">
    <h1 class="mb-4">Supprimer un document</h1>
    <h3 class="text-danger">Voulez-vous vraiment supprimer ce document ?</h3>
    <hr />

    <div class="row">
        <div class="col-md-12">
            <dl class="row">
                <dt class="col-sm-2">Identifiant</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-2">Type</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Type)</dd>

                <dt class="col-sm-2">Chemin</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Chemin)</dd>
            </dl>
        </div>
    </div>

    <hr />

    <div class="mt-4">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Type" />
            <input type="hidden" asp-for="Chemin" />

            <!-- Bouton de suppression -->
            <input type="submit" value="Supprimer" class="btn btn-danger mx-1" />

            <!-- Lien de retour -->
            <a asp-action="Index" class="btn btn-secondary mx-1">Retour à la liste</a>
        </form>
    </div>
</div>
