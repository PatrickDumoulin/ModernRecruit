@model ModernRecrut.MVC.Models.OffreEmploi

@{
    ViewData["Title"] = "Offre d'emploi - Supprimer";
}

<div class="container mt-5">
    <h1 class="mb-4">Supprimer l'offre d'emploi</h1>

    <h3 class="text-danger">Êtes-vous sûr de vouloir supprimer cette offre d'emploi ?</h3>
    <hr />

    <div class="row">
        <div class="col-md-12">
            <dl class="row">
                <dt class="col-sm-2">Identifiant</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-2">Nom</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Nom)</dd>

                <dt class="col-sm-2">Poste</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Poste)</dd>

                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-2">Date de début</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.DateDebut)</dd>

                <dt class="col-sm-2">Date de fin</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.DateFin)</dd>
            </dl>
        </div>
    </div>

    <hr />

    <div class="mt-4">
        <form asp-action="Delete" method="post">
            <input type="submit" value="Supprimer" class="btn btn-danger mx-2" />
            <a asp-action="Index" class="btn btn-secondary mx-2">Retour aux offres d'emplois</a>
        </form>
    </div>
</div>
