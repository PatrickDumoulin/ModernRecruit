@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Changer le mot de passe";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container mt-1">
    <h3 class="mb-4">@ViewData["Title"]</h3>

    <!-- Message de statut -->
    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row">
        <div class="col-md-6">
            <form id="change-password-form" method="post">
                <!-- Affichage des erreurs -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Mot de passe actuel -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.OldPassword">Mot de passe actuel</label>
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>

                <!-- Nouveau mot de passe -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.NewPassword">Nouveau mot de passe</label>
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>

                <!-- Confirmation du nouveau mot de passe -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword">Confirmez le nouveau mot de passe</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Bouton de soumission -->
                <button type="submit" class="w-100 btn btn-lg btn-primary">Mettre à jour le mot de passe</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
