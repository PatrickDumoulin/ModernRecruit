@page
@model RegisterModel
@{
    ViewData["Title"] = "Inscription";
}

<h1 class="text-center stylish-title mt-3">Créer un nouveau compte</h1>

<div class="row justify-content-center">
    <div class="col-md-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="mb-4"></h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Email Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Adresse e-mail" />
                <label asp-for="Input.Email">Adresse e-mail</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Mot de passe" />
                <label asp-for="Input.Password">Mot de passe</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmer le mot de passe" />
                <label asp-for="Input.ConfirmPassword">Confirmer le mot de passe</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Nom Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Nom" class="form-control" aria-required="true" placeholder="Nom" />
                <label asp-for="Input.Nom">Nom</label>
                <span asp-validation-for="Input.Nom" class="text-danger"></span>
            </div>

            <!-- Prenom Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Prenom" class="form-control" aria-required="true" placeholder="Prénom" />
                <label asp-for="Input.Prenom">Prénom</label>
                <span asp-validation-for="Input.Prenom" class="text-danger"></span>
            </div>

            <!-- Type Selection -->
            <div class="form-floating mb-3">
                <select asp-for="Input.Type" class="form-control" aria-required="true">
                    <option value="Employe">Employé</option>
                    <option value="Candidat">Candidat</option>
                </select>
                <label asp-for="Input.Type">Type</label>
                <span asp-validation-for="Input.Type" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary custom-btn">S'inscrire</button>
            </div>
        </form>
    </div>
    
</div>

<!-- CSS Custom -->
<style>
    .custom-btn {
        background-color: #2c3e50;
        border: none;
        color: #fff;
        border-radius: 25px;
        padding: 10px 20px;
        transition: all 0.3s ease;
    }

        .custom-btn:hover {
            background-color: #375a7f;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }

    .form-floating label {
        padding-left: 10px;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
