@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmation d'inscription";
}

<h1 class="text-center stylish-title">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <section class="register-confirmation-section">
            @if (@Model.DisplayConfirmAccountLink)
            {
                <p>
                    Cette application ne possède pas encore d'émetteur d'e-mails configuré. Consultez <a href="https://aka.ms/aspaccountconf">ces documents</a> pour configurer un émetteur d'e-mails. Voici le lien pour confirmer votre compte : <a id="confirm-link" href="@Model.EmailConfirmationUrl">Cliquez ici pour confirmer votre compte</a>
                </p>
            }
            else
            {
                <p>
                    Veuillez vérifier votre e-mail pour confirmer votre compte.
                </p>
            }
        </section>
    </div>
</div>

<!-- CSS Custom -->
<style>
    .stylish-title {
        font-size: 2.5rem;
        margin-bottom: 2rem;
        color: #375a7f;
    }

    .register-confirmation-section {
        background-color: #2c3e50; /* Assombrir le fond pour un meilleur contraste */
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        color: #ffffff; /* Mettre le texte en blanc pour un bon contraste */
    }

    a {
        color: #ffcc00; /* Couleur des liens pour un bon contraste */
        text-decoration: none;
    }

        a:hover {
            color: #ffdd33; /* Changement de couleur au survol */
        }

    p {
        font-size: 1.2rem; /* Augmenter la taille de la police pour une meilleure lisibilité */
    }
</style>
