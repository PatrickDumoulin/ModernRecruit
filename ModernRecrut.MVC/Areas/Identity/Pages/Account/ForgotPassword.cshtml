@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Mot de passe oublié ?";
}

<h1 class="text-center stylish-title">@ViewData["Title"]</h1>
<h2 class="text-center mb-4">Entrez votre adresse e-mail.</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-md-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Email Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Adresse e-mail" />
                <label asp-for="Input.Email" class="form-label">Adresse e-mail</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w-100 btn btn-lg btn-primary custom-btn">Réinitialiser le mot de passe</button>
        </form>
    </div>
</div>

<!-- CSS Custom -->
<style>
    .stylish-title {
        font-size: 2.5rem;
        margin-bottom: 2rem;
        color: #375a7f;
    }

    .custom-btn {
        background-color: #2c3e50;
        border: none;
        color: #fff;
        border-radius: 25px;
        padding: 10px 20px;
        transition: all 0.3s ease;
    }

        .custom-btn:hover {
            background-color: #375a7f;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
