@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

<h1 class="text-center stylish-title">@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-5">
        <section class="login-section">
            <form id="account" method="post">
               
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Email Input -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                    <label asp-for="Input.Email" class="form-label">Adresse e-mail</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password Input -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Mot de passe" />
                    <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Remember Me Checkbox -->
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Se souvenir de moi</label>
                </div>

                <!-- Login Button -->
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Connexion</button>
                </div>

                <!-- Action Buttons -->
                <div class="mt-4 d-flex justify-content-between">
                    <a href="@Url.Page("./ForgotPassword")" class="btn btn-secondary w-45 custom-btn">Mot de passe oublié ?</a>
                    <a href="@Url.Page("./Register", new { returnUrl = Model.ReturnUrl })" class="btn btn-secondary w-45 custom-btn">Créer un compte</a>
                </div>
@* 
                <div class="mt-3">
                    <a href="@Url.Page("./ResendEmailConfirmation")" class="btn btn-secondary w-100 custom-btn">Renvoyer la confirmation d'email</a>
                </div> *@
            </form>
        </section>
    </div>
    
</div>

<!-- CSS Custom -->
<style>
    /* Style pour les boutons */
    .custom-btn {
        background-color: #2c3e50; /* Couleur bleu foncé élégante */
        border: none;
        color: #fff;
        border-radius: 25px;
        padding: 10px 20px;
        transition: all 0.3s ease;
    }

        .custom-btn:hover {
            background-color: #375a7f; /* Changement de couleur au survol */
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2); /* Légère ombre au survol */
        }

    .btn-primary {
        border-radius: 25px;
        padding: 10px 20px;
    }

    .w-45 {
        width: 45%;
    }

    /* Réduire l'opacité des boutons désactivés */
    .custom-btn:disabled {
        background-color: #6c757d;
        color: #ccc;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
